<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>enviarEmail</servlet-name>
        <servlet-class>servlet.enviarEmail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addCliente</servlet-name>
        <servlet-class>servlet.addCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>upCliente</servlet-name>
        <servlet-class>servlet.upCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>delCliente</servlet-name>
        <servlet-class>servlet.delCliente</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>enviarEmail</servlet-name>
        <url-pattern>/enviarEmail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addCliente</servlet-name>
        <url-pattern>/addCliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>upCliente</servlet-name>
        <url-pattern>/upCliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>delCliente</servlet-name>
        <url-pattern>/delCliente</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
